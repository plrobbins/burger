<header>
  <img src="../assets/img/Hamburger1.png" class="mx-auto d-block" alt="delious burger" />
  <h1 class="text-center"><u>EAT-DA-BURGER!</u></h1>
</header>
<div class="container">
  <div class="row">
    <div class="burger-box col-6">
      <h2>Burgers to devour!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{name}}
          <button class="devour-btn btn btn-success btn-sm float-right" data-id="{{id}}"
            data-devoured="{{devoured}}">DEVOUR!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="burger-box col-6">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{name}}
          <button class="delete-btn btn btn-danger btn-sm float-right" data-id="{{id}}">DELETE!</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="add-burger text-center">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurg">Burger Name:</label>
      <input type="text" id="newBurg" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>